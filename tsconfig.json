{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "types": ["node"]
    },
    "include": ["lib/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
}
